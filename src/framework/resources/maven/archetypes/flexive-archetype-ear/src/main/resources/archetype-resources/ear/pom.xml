<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>${rootArtifactId}</artifactId>
		<groupId>${groupId}</groupId>
		<version>${version}</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>${artifactId}</artifactId>
	<packaging>ear</packaging>
	<name>ear</name>

    <properties>
        <ear.name>${rootArtifactId}.ear</ear.name>
    </properties>

	<dependencies>
		<dependency>
			<groupId>${groupId}</groupId>
			<artifactId>ejb-jar</artifactId>
			<type>ejb</type>
		</dependency>

		<dependency>
			<groupId>${groupId}</groupId>
			<artifactId>war</artifactId>
			<type>war</type>
		</dependency>

		<dependency>
		    <groupId>com.flexive</groupId>
		    <artifactId>flexive-shared</artifactId>
		</dependency>

		<dependency>
		    <groupId>com.flexive</groupId>
		    <artifactId>flexive-ejb</artifactId>
            <type>ejb</type>
		</dependency>

        <dependency>
            <groupId>com.flexive</groupId>
            <artifactId>flexive-plugin-jsf-core</artifactId>
        </dependency>

        <!-- Add global configuration plugin for division setup (/flexive-backend-war/globalconfig/index.xhtml) -->
<!--
        <dependency>
            <groupId>com.flexive</groupId>
            <artifactId>flexive-plugin-globalconfig</artifactId>
        </dependency>
-->

		<dependency>
		    <groupId>com.flexive</groupId>
		    <artifactId>flexive-backend</artifactId>
		</dependency>

	</dependencies>
	<build>
        <finalName>${rootArtifactId}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
    				<defaultLibBundleDir>lib</defaultLibBundleDir>
					<modules>
						<ejbModule>
							<groupId>${groupId}</groupId>
							<artifactId>ejb-jar</artifactId>
						</ejbModule>
						<webModule>
							<groupId>${groupId}</groupId>
							<artifactId>war</artifactId>
						</webModule>
                        <webModule>
                            <groupId>com.flexive</groupId>
                            <artifactId>flexive-backend-war</artifactId>
                            <contextRoot>/flexive</contextRoot>
                        </webModule>
					</modules>
					<jboss>
             			<version>4</version>
             			<loader-repository>${groupId}:archive=${ear.name}</loader-repository>
           			</jboss>					
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
