#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config
        PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
        "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>

    <!-- Add your JSF beans and components to this file -->

    <!-- Facelets View Handler Definition. Never remove this one. -->
    <application>
        <view-handler>
            com.sun.facelets.FaceletViewHandler
        </view-handler>
    </application>

    <!-- Our demo managed bean -->

    <managed-bean>
        <managed-bean-name>exampleBean</managed-bean-name>
        <managed-bean-class>${package}.ManagedExampleBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

