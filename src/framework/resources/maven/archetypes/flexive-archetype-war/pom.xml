<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.flexive</groupId>
    <artifactId>flexive-archetype-war</artifactId>
    <packaging>maven-archetype</packaging>
    <name>[fleXive] WAR archetype with embedded EJBs (http://www.flexive.org, requires EJB 3.1+)</name>
    <version>1.0-SNAPSHOT</version>
    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.archetype</groupId>
                <artifactId>archetype-packaging</artifactId>
                <version>2.0-alpha-4</version>
            </extension>
        </extensions>
        <plugins>
            <plugin>
                <artifactId>maven-archetype-plugin</artifactId>
                <version>2.0-alpha-4</version>
                <extensions>true</extensions>
            </plugin>
        </plugins>
    </build>
    
    <distributionManagement>
        <snapshotRepository>
            <id>repo</id>
            <name>Repository Name</name>
            <url>file:///home/daniel/repos/flexive-snapshot-local</url>
        </snapshotRepository>
    </distributionManagement>

</project>