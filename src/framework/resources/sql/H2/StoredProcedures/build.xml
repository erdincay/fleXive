<?xml version="1.0" encoding="ISO-8859-1"?>
<!--
    H2 Stored Procedures Buildfile.

    Builds a jar file containing required stored procedures for the H2 database (www.h2database.com).
    Include this jar file on database startup.

    @author Markus Plesser (markus.plesser@flexive.com), UCS - unique computing solutions gmbh (http://www.ucs.at)
    @version $Rev$
-->
<project name="H2StoredProcedures" basedir="." default="h2.jar">

    <property name="build.h2sp.base.dir" value="${flexive.base.build.dir}/h2StoredProcedures"/>
    <property name="build.h2sp.classes.dir" value="${build.h2sp.base.dir}/classes"/>

    <target name="h2.compile" description="Compile H2 stored procedures">
        <mkdir dir="${build.h2sp.classes.dir}"/>
        <javac-call
                srcdir="${flexive.base.framework.dir}/resources/sql/H2/StoredProcedures"
                includes="**/*java"
                destdir="${build.h2sp.classes.dir}">
			<!--<classpath refid="classpath.build.framework"/>-->
        </javac-call>
    </target>

    <target name="h2.jar" depends="h2.compile" description="Package H2 stored procedures">
        <jar jarfile="${flexive.lib.dir}/flexive-h2.jar">
            <fileset dir="${build.h2sp.classes.dir}">
                <include name="com/flexive/h2/**/*"/>
            </fileset>
        </jar>
        <delete dir="${build.h2sp.base.dir}"/>
    </target>

    <target name="h2.start" depends="h2.jar" description="Start the H2 database.\n">
        <echo taskname="H2">Starting H2 Server in background.
The server can be stopped using target 'h2.stop'.
To use the web interface call target 'h2.web'".
</echo>
        <java classname="org.h2.tools.Server"
              classpath="${flexive.lib.dir}/flexive-h2.jar:${flexive.lib.dir}/h2.jar"
              fork="true" spawn="true">
            <arg line="-tcp"/>
        </java>
    </target>

    <target name="h2.stop" description="Stop the H2 database">
        <java classname="org.h2.tools.Server"
              classpath="${flexive.lib.dir}/h2.jar" fork="true">
            <arg line="-tcpShutdown tcp://localhost:9092"/>
        </java>
    </target>

    <target name="h2.web" description="Start the web interface for the H2 database">
        <echo taskname="H2" message="Starting H2 web server and opening browser. Use &lt;Ctrl&gt;-&lt;C&gt; in this console when done."/>
        <java classname="org.h2.tools.Server"
              classpath="${flexive.lib.dir}/h2.jar" fork="true">
            <arg line="-web -browser"/>
        </java>
    </target>
</project>
