<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
        
<shortcuts>
    <programGroup defaultName="flexive" location="applications"/>
    <shortcut
            name="Launch fleXive ${flexive.version} server"
            description="Launch a [fleXive] ${flexive.version} server"
            iconFile="$INSTALL_PATH/icon_start.png"
            encoding="UTF-8"
            desktop="yes"
            applications="no"
            programGroup="yes"
            startMenu="no"
            workingDirectory="$INSTALL_PATH"
            target="/usr/bin/env"
            commandLine="sh start.sh"
            type="Application"
            terminal="true"
            Categories="Development;Java;Database"
    />
    <shortcut
            name="Open fleXive Backend"
            description="Open the fleXive backend application in your web browser"
            iconFile="$INSTALL_PATH/icon_backend.png"
            encoding="UTF-8"
            desktop="yes"
            applications="no"
            programGroup="yes"
            startMenu="no"
            type="Application"
            workingDirectory="$INSTALL_PATH/flexive-dist"
            terminal="false"
            target="/usr/bin/env"
            commandLine="java -jar openUrl.jar http://localhost:8080/flexive/adm"
            Categories="Development;Java;Database"
    />
    <shortcut
            name="Uninstall"
            description="Uninstall [fleXive] ${flexive.version}"
            iconFile="$INSTALL_PATH/icon_uninstall.png"
            encoding="UTF-8"
            desktop="no"
            applications="no"
            programGroup="yes"
            startMenu="no"
            workingDirectory="$INSTALL_PATH/Uninstaller"
            target="/usr/bin/env"
            commandLine="java -jar uninstaller.jar"
            type="Application"
            terminal="false"
            Categories="Development;Java;Database"
    />

</shortcuts>