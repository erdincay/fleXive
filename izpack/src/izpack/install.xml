<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>flexive</appname>
        <appversion>${flexive.version}</appversion>
        <url>http://www.flexive.org/</url>
        <javaversion>1.5</javaversion>

        <!-- Pack200 greatly reduces the download size, but it does not seem to work correctly
             for the Jetty and flexive packs -->
        <!--<pack200/>-->
    </info>

    <!-- Passthru Maven variables to files filtered by the installer (e.g. shortcut specifications) -->
    <variables>
        <variable name="flexive.version" value="${flexive.version}"/>
    </variables>
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="yes">
        <modifier key="langDisplayType" value="native"/>
        <modifier key="useHeadingPanel" value="yes"/>
        <modifier key="headingLineCount" value="1"/>
        <modifier key="headingFontSize" value="1.3"/>
        <modifier key="headingBackgroundColor" value="0x00ffffff"/>
        <modifier key="headingPanelCounter" value="text"/>
        <modifier key="headingPanelCounterPos" value="inHeading"/>
    </guiprefs>

    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="deu"/>
    </locale>

    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="Licence.txt"/>
        <res id="InfoPanel.info" src="Readme.txt"/>

        <!--<res id="Installer.image" src="installer-image.png"/>-->
        <res id="Heading.image" src="installer-header.png"/>
        
        <res id="Unix_shortcutSpec.xml" src="unix_shortcut_specification.xml"/>
        <res id="shortcutSpec.xml" src="windows_shortcut_specification.xml"/>
    </resources>

    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <!--<panel classname="com.company.izpack.panels.MyHelloPanel"/>-->
        <!--<panel classname="InfoPanel"/>-->
        <!--<panel classname="LicencePanel"/>-->
        <panel classname="TargetPanel"/>
        <!--panel classname="PacksPanel"/-->
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="FinishPanel"/>
    </panels>

    <listeners>
        <listener installer="FlexiveInstallListener"/>
    </listeners>

    <jar src="dependency/plexus-utils.jar"/>
    <jar src="dependency/ant.jar"/>
    <jar src="dependency/ant-launcher.jar"/>
    <!--jar src="../izpack-maven-plugin-example.jar"/-->

    <native type="izpack" name="ShellLink.dll"/>
    <!--
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The base files</description>
            <file src="Readme.txt" targetdir="$INSTALL_PATH"/>
            <file src="Licence.txt" targetdir="$INSTALL_PATH"/>
            <file src="openejb.conf.xml" targetdir="$INSTALL_PATH/jetty-6.1.17"/>
            <file src="start.sh" targetdir="$INSTALL_PATH"/>
            <file src="start.bat" targetdir="$INSTALL_PATH"/>

            <file src="icon_start.ico" targetdir="$INSTALL_PATH"/>
            <file src="icon_start.png" targetdir="$INSTALL_PATH"/>
            <file src="icon_backend.png" targetdir="$INSTALL_PATH"/>
            <file src="icon_backend.ico" targetdir="$INSTALL_PATH"/>
            <file src="icon_uninstall.png" targetdir="$INSTALL_PATH"/>
            <file src="icon_uninstall.ico" targetdir="$INSTALL_PATH"/>

            <!--<file src="script.bat" targetdir="$INSTALL_PATH"/>-->
            <!--<parsable targetfile="$INSTALL_PATH/script.bat"/>-->
            <!-- The file will be parsed -->
        </pack>
        <pack name="[fleXive] ${flexive.version}" required="yes">
            <description>[fleXive] distribution, release ${flexive.version}.</description>
            <file src="flexive-dist.zip" targetdir="$INSTALL_PATH" unpack="true"/>
        </pack>
        <pack name="Jetty WebServer" required="yes">
            <description>Jetty WebServer</description>
            <file src="jetty-6.1.17.zip" targetdir="$INSTALL_PATH" unpack="true"/>
        </pack>
        <pack name="OpenEJB Container" required="yes">
            <description>OpenEJB container</description>
            <fileset dir="dependency/openejb"  targetdir="$INSTALL_PATH/jetty-6.1.17/lib/ext/openejb"/>
        </pack>
    </packs>

</installation>
