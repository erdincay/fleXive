<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<shortcuts>
    <programGroup defaultName="flexive ${flexive.version}" location="applications"/>
    <shortcut
            name="fleXive ${flexive.version} server"
            description="Launch a [fleXive] ${flexive.version} server"
            iconFile="$INSTALL_PATH/icon_start.ico"
            encoding="UTF-8"
            desktop="yes"
            applications="no"
            programGroup="yes"
            startMenu="no"
            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH/start.bat"
            commandLine=""
            type="Application"
            terminal="true"
            Categories="Development;Java;Database"
    />
    <shortcut
            name="Open fleXive administration GUI"
            description="Open the fleXive administration GUI in your web browser (http://localhost:8080/flexive/adm/)"
            iconFile="$INSTALL_PATH/icon_backend.ico"
            encoding="UTF-8"
            desktop="yes"
            applications="no"
            programGroup="yes"
            startMenu="no"
            workingDirectory="$INSTALL_PATH/flexive-dist"
            terminal="false"
            target="$INSTALL_PATH/flexive-dist/openUrl.jar"
            commandLine="http://localhost:8080/flexive/adm"
    />
    <shortcut
            name="Uninstall"
            description="Uninstall [fleXive] ${flexive.version} from $INSTALL_PATH"
            iconFile="$INSTALL_PATH/icon_uninstall.ico"
            encoding="UTF-8"
            desktop="no"
            applications="no"
            programGroup="yes"
            startMenu="no"
            target="$INSTALL_PATH/uninstaller/uninstaller.jar"
    />
</shortcuts>